pipeline{
    agent any
    stages{
        stage("Code Fetch")
        {
            steps{
                git url: "https://github.com/bhumika-16/SPE-Scientific-Calculator.git" ,branch:"dev1"
            }
        }
        stage("Build and Test Maven")
        {
            steps{
              sh "mvn clean install"
            }
        }
        stage("Docker containerize")
        {
            steps{
                sh "docker build -t calculator-java ."
            }
        }
        stage("push to Dockerhub")
        {
            steps{
                withCredentials([usernamePassword(credentialsId:"DockerHubCred",passwordVariable:"dockerpassword",usernameVariable:"dockerusername")]){

                    sh "docker login -u ${env.dockerusername} -p ${env.dockerpassword}"
                    sh "docker tag calculator-java  ${env.dockerusername}/calculator-java"
                    sh "docker push ${env.dockerusername}/calculator-java"

                }
            }

        }
        stage("deploy")
        {
            steps{
                script {
                    ansiblePlaybook(
                        playbook: 'deploy.yml',
                        inventory: 'inventory'
                        )
                }
            }
        }
}

}